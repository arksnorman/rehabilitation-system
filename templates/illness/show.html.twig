{% extends 'base.html.twig' %}

{% block title %}Illness{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="page-header">Illness</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <table class="table table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ illness.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ illness.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ illness.description }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('illness_index') }}" class="btn btn-primary">Back to illnesses list</a>
            <a href="{{ path('illness_edit', {'id': illness.id}) }}" class="btn btn-info">
                <i class="fa fa-edit"></i> Edit
            </a>
            <a href="{{ path('illness_delete', {'id': illness.id}) }}" class="btn btn-danger"
               onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="fa fa-trash-o"></i> Delete
            </a>
        </div>
    </div>
{% endblock %}