{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}

<div class="col-md-3"></div>
<div class="col-md-6">
    <h1 class="text-center">Patient</h1>
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ patient.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ patient.lastName }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ patient.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Date_created</th>
                <td>{{ patient.dateCreated ? patient.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modified</th>
                <td>{{ patient.dateModified ? patient.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Disease</th>
                <td>{{ patient.illness }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ patient.comments ? patient.comments|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Parent_first_name</th>
                <td>{{ patient.parentFirstName }}</td>
            </tr>
            <tr>
                <th>Parent_last_name</th>
                <td>{{ patient.parentLastName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ patient.age }}</td>
            </tr>
            <tr>
                <th>Residence</th>
                <td>{{ patient.residence }}</td>
            </tr>
            <tr>
                <th>Parent_occupation</th>
                <td>{{ patient.parentOccupation }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ patient.sex }}</td>
            </tr>
            <tr>
                <th>Parent_comments</th>
                <td>{{ patient.parentComments ? patient.parentComments|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('patients') }}" class="btn btn-primary">Back to patients list</a>
    <a href="{{ path('editPatient', {'id': patient.id}) }}" class="btn btn-info"><i class="fa fa-edit"></i> Edit</a>
    <a href="{{ path('deletePatient', {'id': patient.id}) }}" class="btn btn-danger"
       onclick="return confirm('Are you sure you want to delete this item?');">
        <i class="fa fa-trash"></i> Delete
    </a>
</div>
<div class="col-md-3"></div>
{% endblock %}