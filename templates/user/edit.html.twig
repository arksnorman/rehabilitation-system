{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Edit User</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
            <br>
            <a href="{{ path('user_index') }}" class="btn btn-primary">Back to users list</a>
            <a href="{{ path('user_password', {'id': user.id}) }}" class="btn btn-info">Change password</a>
            <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger"
               onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="fa fa-trash-o"></i> Delete
            </a>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}