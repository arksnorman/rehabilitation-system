{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">User</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Phone number</th>
                        <td>{{ user.phoneNumber }}</td>
                    </tr>
                    <tr>
                        <th>Last login</th>
                        <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('user_index') }}" class="btn btn-primary">Back to users list</a>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info"><i class="fa fa-edit"></i> Edit</a>
            <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger"
               onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="fa fa-trash-o"></i> Delete
            </a>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}